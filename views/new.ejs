<%- include("partials/header") %>

    <div class="container">
        <div class="row justify-content-center">
            <h1 class="text-center">Add new skill</h1>
        </div>
        <div class="row">
            <div style="width:30%; margin: 0 auto">
                <form action="/skills" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="skill" placeholder="skill">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="image" placeholder="image">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="description" placeholder="description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-success btn-block">Submit!</button>

                    </div>
                </form>
            </div>
        </div>
    </div>




